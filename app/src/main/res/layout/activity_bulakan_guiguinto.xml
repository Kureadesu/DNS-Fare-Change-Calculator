<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BulakanGuiguinto" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bulakan - Guiguinto v.v."
            android:paddingHorizontal="28dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="34sp"
            android:textColor="@color/headerText" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Amount Paid Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount Paid:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btnAmount20"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="20"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#814622"
                    android:textColor="@color/white"
                    android:layout_marginEnd="5dp"/>

                <Button
                    android:id="@+id/btnAmount50"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#814622"
                    android:textColor="@color/white"
                    android:layout_marginEnd="5dp"/>

                <Button
                    android:id="@+id/btnAmount100"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="100"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#814622"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Passengers Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. of Passengers:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/btnPass1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#814622"
                    android:textColor="@color/white"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnPass2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#814622"
                    android:textColor="@color/white"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnPass3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#814622"
                    android:textColor="@color/white"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnPass4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#814622"
                    android:textColor="@color/white"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnPass5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#814622"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="change:"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/displayChange"
                android:layout_width="144dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#EDEDED"
                android:textAlignment="center"
                android:maxLines="1"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@color/headerText"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/discounted"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/headerText"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Discounted Fare"/>

                <Button
                    android:id="@+id/regular"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Regular Fare"/>
            </LinearLayout>
            <Button
                android:id="@+id/clear"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="AC"/>

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="37dp" />

        <Button
            android:id="@+id/Back"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Go Back"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="81dp"
            android:background="@color/brown">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="Â©2025 Kureadesu" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>