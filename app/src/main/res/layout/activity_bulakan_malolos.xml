<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".BulakanMalolos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bulakan - Malolos v.v."
                android:padding="12dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/headerText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="amount paid:"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="144dp"
                    android:layout_height="75dp"
                    android:padding="16dp"
                    android:textCursorDrawable="@color/headerText"
                    android:inputType="number"
                    android:maxLines="1"
                    android:background="#EDEDED"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="no. of pass:"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="144dp"
                    android:layout_height="75dp"
                    android:padding="16dp"
                    android:textCursorDrawable="@color/headerText"
                    android:inputType="number"
                    android:maxLines="1"
                    android:background="#EDEDED"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="pickup:"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <Spinner
                    android:id="@+id/pickup"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textAlignment="center">

                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="destination:"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <Spinner
                    android:id="@+id/destination"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textAlignment="center">

                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="change:"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/displayChange"
                    android:layout_width="144dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#EDEDED"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@color/headerText"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:id="@+id/discounted"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/headerText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Discounted Fare"/>

            <Button
                android:id="@+id/regular"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Regular Fare"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="37dp" />

            <Button
                android:id="@+id/Back"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Go Back"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="81dp"
                android:background="@color/brown">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="Â©2025 Kureadesu" />

            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>