<Window x:Class="DNS_Fare_Change_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diesel N Steel - Fare Calculator"
        Height="750" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <Style x:Key="RouteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF814622"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF9A5527"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#FF2C2416">
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Diesel N Steel" 
                       FontSize="38" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>

            <TextBlock Text="Fare Calculator" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <Button Content="Bulakan → Guiguinto" 
                    Style="{StaticResource RouteButtonStyle}"
                    Click="BulakanGuiguinto_Click"/>

            <Button Content="Bulakan → Balagtas" 
                    Style="{StaticResource RouteButtonStyle}"
                    Click="BulakanBalagtas_Click"/>

            <Button Content="Bulakan → Malolos" 
                    Style="{StaticResource RouteButtonStyle}"
                    Click="BulakanMalolos_Click"/>

            <Button Content="Exit" 
                    Background="#FFB71C1C"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    Height="50"
                    Width="120"
                    Margin="0,20,0,0"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Exit_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <TextBlock Text="©2025 Kureadesu" 
                       FontSize="12" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Window>