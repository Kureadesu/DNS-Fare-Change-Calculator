<Window x:Class="DNS_Fare_Change_Calculator.BulakanGuiguintoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bulakan - Guiguinto v.v."
        Height="800" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <Style x:Key="SelectionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF814622"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        
        <Style x:Key="SelectedButtonStyle" TargetType="Button" BasedOn="{StaticResource SelectionButtonStyle}">
            <Setter Property="Background" Value="#FF218C17"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#FF2C2416">
        <StackPanel Margin="20">
            <TextBlock Text="Bulakan - Guiguinto v.v." 
                       FontSize="34" 
                       FontWeight="Bold" 
                       Foreground="#FF814622"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,0"
                       Padding="0,0,0,20"/>
            
            <!-- Amount Paid Section -->
            <TextBlock Text="Amount Paid:" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       Margin="12,0,12,5"/>
            <Grid Margin="12,0,12,0" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="btnAmount20" 
                        Content="20" 
                        Grid.Column="0"
                        Style="{StaticResource SelectedButtonStyle}" 
                        Click="AmountButton_Click" 
                        Tag="20"
                        Margin="0,0,5,0"/>
                <Button x:Name="btnAmount50" 
                        Content="50" 
                        Grid.Column="1"
                        Style="{StaticResource SelectionButtonStyle}" 
                        Click="AmountButton_Click" 
                        Tag="50"
                        Margin="0,0,5,0"/>
                <Button x:Name="btnAmount100" 
                        Content="100" 
                        Grid.Column="2"
                        Style="{StaticResource SelectionButtonStyle}" 
                        Click="AmountButton_Click" 
                        Tag="100"/>
            </Grid>
            
            <!-- Passengers Section -->
            <TextBlock Text="No. of Passengers:" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       Margin="12,20,12,5"/>
            <Grid Margin="12,0,12,0" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="btnPass1" 
                        Content="1" 
                        Grid.Column="0"
                        Style="{StaticResource SelectedButtonStyle}" 
                        Click="PassengerButton_Click" 
                        Tag="1"
                        Margin="0,0,4,0"/>
                <Button x:Name="btnPass2" 
                        Content="2" 
                        Grid.Column="1"
                        Style="{StaticResource SelectionButtonStyle}" 
                        Click="PassengerButton_Click" 
                        Tag="2"
                        Margin="0,0,4,0"/>
                <Button x:Name="btnPass3" 
                        Content="3" 
                        Grid.Column="2"
                        Style="{StaticResource SelectionButtonStyle}" 
                        Click="PassengerButton_Click" 
                        Tag="3"
                        Margin="0,0,4,0"/>
                <Button x:Name="btnPass4" 
                        Content="4" 
                        Grid.Column="3"
                        Style="{StaticResource SelectionButtonStyle}" 
                        Click="PassengerButton_Click" 
                        Tag="4"
                        Margin="0,0,4,0"/>
                <Button x:Name="btnPass5" 
                        Content="5" 
                        Grid.Column="4"
                        Style="{StaticResource SelectionButtonStyle}" 
                        Click="PassengerButton_Click" 
                        Tag="5"/>
            </Grid>
            
            <!-- Change Display Section -->
            <Grid Margin="12,20,12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Change:" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                
                <Border Grid.Column="1" 
                        Background="#FFEDEDED" 
                        Height="75"
                        CornerRadius="5">
                    <TextBlock x:Name="displayChange" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="Black"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Padding="16"/>
                </Border>
            </Grid>
            
            <!-- Action Buttons Section -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="12,0,5,0">
                    <Button Content="Discounted Fare" 
                            Background="#FF814622"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Height="60"
                            Margin="0,0,0,5"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="DiscountedFare_Click"/>
                    
                    <Button Content="Regular Fare" 
                            Background="#FF218C17"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Height="60"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="RegularFare_Click"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="AC" 
                        Background="#FFB71C1C"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        Width="100"
                        Height="125"
                        Margin="5,0,16,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Clear_Click"/>
            </Grid>
            
            <!-- Back Button -->
            <Button Content="Go Back" 
                    Background="#FFB71C1C"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Bold"
                    Height="60"
                    Width="300"
                    Margin="0,37,0,0"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="GoBack_Click"/>
            
            <!-- Footer -->
            <Border Background="#FF5D4037" 
                    Height="60"
                    Margin="0,20,0,0">
                <TextBlock Text="Â©2025 Kureadesu" 
                           FontSize="12" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>