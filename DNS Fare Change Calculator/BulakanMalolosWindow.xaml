<Window x:Class="DNS_Fare_Change_Calculator.BulakanMalolosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bulakan - Malolos v.v."
        Height="850" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <Style x:Key="SelectionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF814622"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#FF2C2416">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Bulakan - Malolos v.v." 
                           FontSize="34" 
                           FontWeight="Bold" 
                           Foreground="#FF814622"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>
                
                <!-- Amount Paid -->
                <TextBlock Text="Amount Paid:" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,10,0,5"/>
                <StackPanel Orientation="Horizontal" Height="50">
                    <Button x:Name="btnAmount20" Content="20" Width="130" Style="{StaticResource SelectionButtonStyle}" Click="AmountButton_Click" Tag="20"/>
                    <Button x:Name="btnAmount50" Content="50" Width="130" Style="{StaticResource SelectionButtonStyle}" Click="AmountButton_Click" Tag="50"/>
                    <Button x:Name="btnAmount100" Content="100" Width="130" Style="{StaticResource SelectionButtonStyle}" Click="AmountButton_Click" Tag="100"/>
                </StackPanel>
                
                <!-- Passengers -->
                <TextBlock Text="No. of Passengers:" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,20,0,5"/>
                <StackPanel Orientation="Horizontal" Height="50">
                    <Button x:Name="btnPass1" Content="1" Width="75" Style="{StaticResource SelectionButtonStyle}" Click="PassengerButton_Click" Tag="1"/>
                    <Button x:Name="btnPass2" Content="2" Width="75" Style="{StaticResource SelectionButtonStyle}" Click="PassengerButton_Click" Tag="2"/>
                    <Button x:Name="btnPass3" Content="3" Width="75" Style="{StaticResource SelectionButtonStyle}" Click="PassengerButton_Click" Tag="3"/>
                    <Button x:Name="btnPass4" Content="4" Width="75" Style="{StaticResource SelectionButtonStyle}" Click="PassengerButton_Click" Tag="4"/>
                    <Button x:Name="btnPass5" Content="5" Width="75" Style="{StaticResource SelectionButtonStyle}" Click="PassengerButton_Click" Tag="5"/>
                </StackPanel>
                
                <!-- Pickup -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Pickup:" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="pickupComboBox" 
                              Grid.Column="1" 
                              Height="50"
                              FontSize="16"
                              VerticalContentAlignment="Center"
                              SelectionChanged="Location_SelectionChanged"/>
                </Grid>
                
                <!-- Destination -->
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Destination:" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="destinationComboBox" 
                              Grid.Column="1" 
                              Height="50"
                              FontSize="16"
                              VerticalContentAlignment="Center"
                              SelectionChanged="Location_SelectionChanged"/>
                </Grid>
                
                <!-- Change Display -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Change:" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    
                    <Border Grid.Column="1" 
                            Background="#FFEDEDED" 
                            Height="50"
                            CornerRadius="5">
                        <TextBlock x:Name="displayChange" 
                                   Text="0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
                
                <!-- Action Buttons -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Button Content="Discounted Fare" 
                                Background="#FF814622"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Height="60"
                                Margin="0,0,0,5"
                                BorderThickness="0"
                                Click="DiscountedFare_Click"/>
                        
                        <Button Content="Regular Fare" 
                                Background="#FF218C17"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Height="60"
                                BorderThickness="0"
                                Click="RegularFare_Click"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Content="AC" 
                            Background="#FFB71C1C"
                            Foreground="White"
                            FontSize="24"
                            FontWeight="Bold"
                            Height="125"
                            Margin="5,0,0,0"
                            BorderThickness="0"
                            Click="Clear_Click"/>
                </Grid>
                
                <!-- Back Button -->
                <Button Content="Go Back" 
                        Background="#FFB71C1C"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        Height="60"
                        Width="300"
                        Margin="0,40,0,0"
                        BorderThickness="0"
                        Click="GoBack_Click"/>
                
                <TextBlock Text="Â©2025 Kureadesu" 
                           FontSize="12" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>